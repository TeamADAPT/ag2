# AATS Development Environment Configuration

# System
ENVIRONMENT=development
LOG_LEVEL=debug
DEBUG=true

# Database Configurations
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aats_dev
POSTGRES_USER=aats_user
POSTGRES_PASSWORD=aats_password

MONGODB_URI=mongodb://localhost:27017/aats_dev
MONGODB_USER=aats_user
MONGODB_PASSWORD=aats_password

NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=aats_password

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=aats_password

# Message Brokers
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=aats_dev

RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Search Engines
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

MILVUS_HOST=localhost
MILVUS_PORT=19530

# API Gateway
KONG_ADMIN_URL=http://localhost:8001
KONG_PROXY_URL=http://localhost:8000

# Service Mesh
ISTIO_GATEWAY=aats-gateway
ISTIO_NAMESPACE=aats

# Monitoring
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# Model Services
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
COHERE_API_KEY=${COHERE_API_KEY}

# Integration Services
GITHUB_TOKEN=${GITHUB_TOKEN}
JIRA_TOKEN=${JIRA_TOKEN}
CONFLUENCE_TOKEN=${CONFLUENCE_TOKEN}
SLACK_TOKEN=${SLACK_TOKEN}

# Security
JWT_SECRET=aats_dev_secret
ENCRYPTION_KEY=aats_dev_key

# Feature Flags
ENABLE_HITL=true
ENABLE_MONITORING=true
ENABLE_TRACING=true
ENABLE_METRICS=true
ENABLE_LOGGING=true

# Paths
LOG_PATH=./logs
DATA_PATH=./data
TEMP_PATH=./data/temp
MODEL_PATH=./models
CONFIG_PATH=./config

# Timeouts and Limits
REQUEST_TIMEOUT=30
RATE_LIMIT=100
MAX_RETRIES=3
BATCH_SIZE=50

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Development Tools
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
